<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_system_video_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mobilephoneplayer.activity.SystemVideoPlayerActivity">

    <com.example.mobilephoneplayer.view.VideoView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <include layout="@layout/mediacontroller" />

    <include
        android:id="@+id/ll_loading"
        layout="@layout/loading" />

    <include
        android:id="@+id/ll_buffer"
        layout="@layout/buffer" />
</RelativeLayout>
